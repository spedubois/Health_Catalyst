@model IEnumerable<people.Models.People>
@{
    ViewBag.Title = "Index";
}

<h2>People search</h2>
<p>
    Welcome to my people search web service. You can use the tool bar above to navigate around. <br />
    Click the "Add Person" tab above to insert a new person into the database.<br />
    Click the "Serch for Person" tab above to find a person in the database.
    <br />
    <br />
    Below is a table representation of all the people in the database.
    <br />
    <br />

     
</p>
<table cellpadding="5" cellspacing="5">
    <tr style="border:1px solid red; margin:5px;">
        <td><b>First Name</b></td>
        <td><b>Last Name</b></td>
        <td><b>Address</b></td>
        <td><b>Age</b></td>
        <td><b>Phone #</b></td>
    </tr>
        @foreach (var item in Model)
        {
            <tr style="border:1px solid red; margin:5px;">
                <td>@item.first</td>
                <td>@item.last</td>
                <td>@item.address</td>
                <td>@item.age</td>
                <td>@item.phone</td>

            </tr>
                
        }
</table>
